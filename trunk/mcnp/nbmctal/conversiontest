#!/bin/bash

VERBOSE=""

function help {

        echo "Usage: conversiontest [-v] mctal_file "
        exit 0

}

function performTest () {

        echo "Converting..."

        SUM=0
        ALL=0

        if [[ "$VERBOSE" == "-v" ]]; then
                shift 1
        fi

	python nbmctal2root.py $VERBOSE $@
	OUT=$?
	SUM=$(($SUM+$OUT))
	python nbroottest.py $VERBOSE $@
	OUT=$?
	SUM=$(($SUM+$OUT))

        exit $SUM

}

if test $# -eq 0; then
    help
fi

while getopts "hv" option; do
    case $option in
        h) help;;
        v) VERBOSE="-v";;
    esac
done

performTest $@

